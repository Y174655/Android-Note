<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bgdel">

    <EditText
        android:id="@+id/editTextdelword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttondelcancle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextdelword"
        android:layout_below="@+id/editTextdelword"
        android:layout_marginRight="36dp"
        android:layout_marginTop="47dp"
        android:text="取消" />

    <Button
        android:id="@+id/buttondelok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttondelcancle"
        android:layout_alignBottom="@+id/buttondelcancle"
        android:layout_alignLeft="@+id/editTextdelword"
        android:layout_marginLeft="19dp"
        android:text="确认" />

</RelativeLayout>