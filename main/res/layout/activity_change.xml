<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bgchange">

    <EditText
        android:id="@+id/editTextchangemean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextchangeword"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextchangeword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextchangemean"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:ems="10" />

    <Button
        android:id="@+id/buttonchangeok"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextchangemean"
        android:layout_below="@+id/editTextchangemean"
        android:layout_marginTop="34dp"
        android:text="确认" />

    <Button
        android:id="@+id/buttonchangecancle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonchangeok"
        android:layout_alignBottom="@+id/buttonchangeok"
        android:layout_alignRight="@+id/editTextchangemean"
        android:layout_marginRight="30dp"
        android:text="取消" />

</RelativeLayout>