<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/shouye2">

    <Button
        android:id="@+id/buttondel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttoninsert"
        android:layout_below="@+id/buttoninsert"
        android:layout_marginTop="16dp"
        android:background="@drawable/btdel" />

    <Button
        android:id="@+id/buttonsearch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttondel"
        android:layout_below="@+id/buttondel"
        android:layout_marginTop="18dp"
        android:background="@drawable/btsearch" />

    <Button
        android:id="@+id/buttonchange"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonsearch"
        android:layout_below="@+id/buttonsearch"
        android:layout_marginTop="14dp"
        android:background="@drawable/btchange" />

    <Button
        android:id="@+id/buttonout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonchange"
        android:layout_below="@+id/buttonchange"
        android:layout_marginTop="17dp"
        android:background="@drawable/btgame" />

    <Button
        android:id="@+id/buttoninsert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/btinsert" />

</RelativeLayout>